@{
}
<h1> Categorias </h1>
<br />
<td><a class="btn btn-primary" href="/Categoria/Create">Nova Categoria</a></td>


<div id="divtabela">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">CategoriaID</th>
                <th scope="col">Nome da Categoria</th>
                <th scope="col">Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listaCategorias)
            {
                <tr>
                    <td>@item.CategoriaID</td>
                    <td>@item.Nome</td>
                    <td>@item.CategoriaDescricao</td>
                    <td><a class="btn btn-outline-warning" href="/Categoria/Atualizar/@item.CategoriaID">Editar</a></td>
                    <td><a class="btn btn-outline-danger" href="/Categoria/Apagar/@item.CategoriaID">Deletar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
